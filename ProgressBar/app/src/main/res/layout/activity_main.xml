<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.angluswang.progressbar.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.angluswang.view.HorizontalProgressBar
            android:id="@+id/id_progress01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:padding="15dp"
            android:progress="0"
            app:progress_reach_color="#ffff0000"
            app:progress_text_color="#ffff0000"
            app:progress_unreach_color="#44ff0000"/>

        <com.angluswang.view.HorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:progress="50"
            app:progress_reach_color="#ff00ffaa"
            app:progress_text_color="#ff00ffaa"
            app:progress_unreach_color="#4400ffaa"/>

        <com.angluswang.view.HorizontalProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:progress="25"
            app:progress_reach_color="#ff0000ff"
            app:progress_reach_height="4dp"
            app:progress_text_color="#ff0000ff"
            app:progress_text_size="16sp"
            app:progress_unreach_color="#440000ff"
            app:progress_unreach_height="3dp"/>

        <com.angluswang.view.RoundProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:progress="75"
            app:progress_reach_color="#ff00aabb"
            app:progress_text_color="#ff00aabb"
            app:progress_text_size="20sp"
            app:progress_unreach_color="#4400aabb"
            app:radius="60dp"/>

        <com.angluswang.view.RoundProgressBar
            android:id="@+id/id_progress02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:progress="0"
            app:progress_reach_color="#ffffbb00"
            app:progress_text_color="#ffffbb00"
            app:progress_text_size="20sp"
            app:progress_unreach_color="#44ffbb00"
            app:radius="80dp"/>

    </LinearLayout>
</ScrollView>
